<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.taobook.datasour.RequestEntity" table="REQUEST" schema="BOOK_SELLING">
        <id name="id" column="id"/>
        <property name="time" column="time"/>
        <property name="name" column="name"/>
        <property name="clazz" column="class"/>
        <property name="description" column="description"/>
        <property name="priceCeil" column="price_ceil"/>
        <property name="priceFloor" column="price_floor"/>
        <property name="deliTime" column="deli_time"/>
        <property name="img" column="img"/>
        <many-to-one name="publisher" class="com.example.taobook.datasour.UserEntity" column="user_id"/>
    </class>
</hibernate-mapping>