<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.taobook.datasour.ItemEntity" table="ITEM" schema="BOOK_SELLING">
        <id name="id" column="id"/>
        <property name="time" column="time"/>
        <property name="name" column="name"/>
        <property name="clazz" column="class"/>
        <property name="type" column="type"/>
        <property name="description" column="description"/>
        <property name="img" column="img"/>
        <property name="stock" column="stock"/>
        <property name="price" column="price"/>
        <property name="buyCount" column="buy_count"/>
        <many-to-one name="publisher" class="com.example.taobook.datasour.UserEntity" column="user_id"/>
        <many-to-one name="requester" class="com.example.taobook.datasour.UserEntity" column="req_id"/>
    </class>
</hibernate-mapping>